{
  "name": "derrumbe/derrumbe-net",
  "description": "Derrumbe.net backend API using Slim 4 and PHP dotenv.",
  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "DerrumbeNet\\": "api/"
    }
  },
  "authors": [
    {
      "name": "Alanis Negroni",
      "email": "negronialanis2@gmail.com"
    },
    {
      "name": "Jose J Irizzary",
      "email": "jose.irizarry24@upr.edu"
    },
    {
      "name": "Glerysbeth Serrano",
      "email": "glerysbeth.serrano@upr.edu"
    },
    {
      "name": "Jose R Rivera",
      "email": "jose.rivera471@upr.edu"
    }
  ],
  "require": {
    "php": "^8.3",
    "vlucas/phpdotenv": "^5.6",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.7",
    "ext-pdo": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.4"
  },
  "config": {
    "vendor-dir": "api/vendor",
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
